% New environments.
%============================================================
% Collection of topics which are part of a lesson.
% Usage: \begin{lesson}[
%			\item Learning Goal 1
%			\item Learning Goal 2
%		 ]{lesson name}
%			<topic>s and <subtopic>s
% 		 \end{lesson}
% parameter: (opt.) learning goals, name
\newenvironment{lesson}[2][]
	{
		\section*{VL: #2}
		\ifx&#1&%
		  % #1 (learning goals) is empty
		\else
		  % #1 (learning goals) is nonempty
		  \subsection*{Lernziele}
		  \begin{itemize}
		  	#1
		  \end{itemize}
		  \subsection*{Inhalt}
		\fi
		\renewcommand{\arraystretch}{1.5}
		\begin{longtable}{p{0.03\textwidth}p{0.6\textwidth}p{0.1\textwidth}p{0.25\textwidth}}
	}
	{
		\end{longtable}
		\vspace{2mm}
		\hrule
	}

% New commands.
%============================================================
% Mentions a lesson topic and its reference.
% Should only used in lesson environment.
% Usage: \topic[<description>]{<name>}{<reference>} or
%		 \topic{<name>}{<reference>}
% parameter: (opt.) description, name, reference
\newcommand{\topic}[3][]{
 	$\triangleright$ & #2 & \textcolor{gray}{\small#3} & \textit{\footnotesize#1} \\
}

\newcommand{\subtopic}[3][]{
 	& \hspace{0.75cm} - \begin{minipage}[t]{0.89\hsize}#2\end{minipage} & \textcolor{gray}{\small#3} & \textit{\footnotesize#1} \\ 	
}


